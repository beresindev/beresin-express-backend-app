{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"@configs/*": ["configs/*"],
			"@controllers/*": ["controllers/*"],
			"@middlewares/*": ["middlewares/*"],
			"@models/*": ["models/*"],
			"@routes/*": ["routes/*"],
			"@utils/*": ["utils/*"],
			"@validations/*": ["validations/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "src/types/express"]
}
